{
  "name": "supabase-next-helpers",
  "version": "0.1.0",
  "description": "Type-safe Supabase helpers for Next.js applications",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts"
  },
  "files": [
    "src",
    "README.md"
  ],
  "scripts": {
    "clean": "rm -rf node_modules",
    "check": "npx ultracite@latest check",
    "fix": "npx ultracite@latest fix",
    "prepublishOnly": "bun run check"
  },
  "keywords": [
    "supabase",
    "next.js",
    "nextjs",
    "typescript",
    "helpers",
    "auth",
    "storage"
  ],
  "author": "reactivesilicon",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/reactivesilicon/supabase-next-helpers"
  },
  "packageManager": "bun@latest",
  "dependencies": {
    "@supabase/ssr": "^0.8.0",
    "@supabase/storage-js": "^2.87.1",
    "@supabase/supabase-js": "^2.87.1",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@types/bun": "latest",
    "ultracite": "6.4.0"
  },
  "peerDependencies": {
    "typescript": "^5",
    "next": "^16.0.10"
  },
  "publishConfig": {
    "access": "public"
  }
}
